<%= simple_form_for(@select, :html => { :class => 'form-horizontal' }, url: wizard_path) do |f| %>
<ul class="nav nav-pills nav-justified" id="succ_standard">

<% @standards.each do |standard| %>
    <li class="border animated fadeInLeftBig"><h4><%= standard.id %></h4><br/><%= link_to standard.content, '#', remote: :true %>  </li>
    <% end %>

</ul>
<br/>

<div id="standard-attributes" class="animated fadeInUpBig">



<div class="row">
  <div class="col-md-6">
  	<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Question Stems</h3>
  </div>
  <div class="panel-body table-content">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <% if Question.where(:standard_id => standard.id).empty? %>
  No preset question stems exist for this standard. Continue to the next page to add them.
  <% else %>

  
  <%= f.association :questions, collection: Question.where(:user_id => 0).where(:standard_id => standard.id), as: :check_boxes, :label_method => lambda { |question| "#{question.content}" }, input_html: {:data => {:toggle => "checkbox"}}, label: false %>
  
  <% end %>
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
</div>

  <div class="col-md-6">
    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Vocabulary</h3>
