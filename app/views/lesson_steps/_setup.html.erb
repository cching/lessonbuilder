
<div class="animated fadeInRight">
<%= simple_form_for(@select, :html => { :class => 'form-horizontal' }, url: wizard_path)  do |f| %>

    <%= f.input :name, input_html: {style: 'width:100%;'}, label: "Lesson name:", autofocus: true %>
   
    
    <%= f.input :description, as: :text, input_html: {style: 'width:100%; height:50px'}, label: "Description:" %>
   
    
    <%= f.input :objective, input_html: {style: 'width:100%; height:50px'}, label: "Objective:" %>
    
   
   <div class="row">

  <div class="col-md-1"><%= f.association :grades, collection: Grade.where(:id => 1..5), label: "Grade(s):", as: :check_boxes, label_method: :number, input_html: {:data => {:toggle => "checkbox"}} %></div>
<div class="col-md-1"><br/><%= f.association :grades, collection: Grade.where(:id => 6..9), label: "", as: :check_boxes, label_method: :number, input_html: {:data => {:toggle => "checkbox"}} %></div>

  <div class="col-md-3"><%= f.association :subject, as: :radio_buttons, label_method: :name, label: "Standards:", input_html: {:data => {:toggle => "radio"}} %>
	<%= f.association :subsubjects, collection: Subsubject.where(:id => 3), label: false, as: :check_boxes, label_method: :name, input_html: {:data => {:toggle => "checkbox"}} %>
  </div>

<div class="col-md-3"><%= f.association :subsubjects, label: "Subject(s):", collection: Subsubject.where(:id => 4..7), as: :check_boxes, label: " ", input_html: {:data => {:toggle => "checkbox"}} %></div>

<div class="col-md-2"><%= f.association :sources, label: "Source(s):", collection: Source.where(:id => 1..5), as: :check_boxes, label_method: :name, input_html: {:data => {:toggle => "checkbox"}} %></div>

<div class="col-md-2"><%= f.association :sources, label: "Source(s):", collection: Source.where(:id => 6..8), as: :check_boxes, label: "", input_html: {:data => {:toggle => "checkbox"}} %></div>
</div>
    
  <div class="form-actions" align="right">

 <button type="submit" class="btn btn-primary" data-loading-text="Saving..">Save and Continue</button>
  </div>

<% end %>

</div>

