<body class="cbp-spmenu-push">
    <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
      <%= render 'sidebar' %>
    </nav>

<div class="row">
  <div class="col-md-1">
  <div class="animated fadeInLeftBig">
  <button id="showLeftPush" class="bar">
  <div id="arrow"><span class="glyphicon glyphicon-forward"></span></div>
  </button>
  </div>
  </div>

  <div class="col-md-10">


<div id="standard-attributes" class="animated fadeInUp">
<div class="panel-group" id="accordion">
 <%= simple_form_for @select, url: wizard_path do |f| %>


    <div id="content">

<div class="row" id="plan">
<div class="col-md-5">      
<div align="center"><b>Resources</b></div>  
        <div class="dragitems">
  
          <%= render 'list_items' %>
        </div>
        
    </div>
<div class="col-md-7">    
<div class="dropitems">
  <div class="animated fadeInDown">
<div class="panel panel-warning" id="plan">Instructional Plan</div>
</div>
<small align="center">Select resources for your lesson. Add them to your instructional plane by dragging and dropping them into the text box.</small>

            <%= f.input :notes, label: false, :input_html => { style: 'width:100%; height:300px', id: "TextArea1" } %>
        </div>
</div>

    </div>
    </div>



  
  
  <br/>
 <div align="right">
 <%= f.submit "Save Lesson", class: "btn btn-warning", id: "notes" %></div>
  <% end %>
</div>

</div>
</div>
</div>
</body>
<script>
      var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),

        showLeftPush = document.getElementById( 'showLeftPush' ),

        body = document.body;

      
      showLeftPush.onclick = function() {
        classie.toggle( this, 'active' );
        classie.toggle( body, 'cbp-spmenu-push-toright' );
        classie.toggle( menuLeft, 'cbp-spmenu-open' );
        disableOther( 'showLeftPush' );

      };


    </script>