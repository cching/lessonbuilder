<% if current_user?(@select.user) %>
<center><h1><%= best_in_place @select, :name, :nil => "Click here to add a lesson name" %></h1>

<h4>Description: <%= best_in_place @select, :description, :type => :textarea, :nil => "Click here to add a description" %></h4>
<h4>Objective: <%= best_in_place @select, :objective, :type => :textarea, :nil => "Click here to add an objective" %></h4>
<h4>Text: <%= best_in_place @select, :text, :nil => "Click here to add text" %></h4>
<h4><%= @select.date.to_time.strftime('%B %e, %Y') %></h4></center><br />

<% else %>

<center><h4>Description: <%= @select.description %></h4>
<h4>Objective: <%= @select.objective %></h4>
<h4>Text: <%= @select.text %></h4>
<h4><%= @select.date.to_time.strftime('%B %e, %Y') %></h4></center><br />

<% end %>

		
<table class="table table-condensed table-hover table-bordered">

	<thead>
	
		<% @standards.each do |standard| %>
		<th colspan="2">
			<h4><strong><%= standard.id %>: <%= standard.content %></strong></h4>
		</th>

	</thead>

		<tbody>
			
			<tr>
					<td width="50%">
					<h5>Questions</h5>
				</td>
					<td width="50%">
					<h5>Skills</h5>
				</td>
			</tr>
			
			<tr>
				<td>
					<% standard.select_questions.where(:select_id => @select).each do |squestion| %>
						<ul type="disc">
							<li>
						<% if current_user?(@select.user) %>
							<%= best_in_place squestion.question, :content, :nil => "Click here to add content" %>
							<% else %>
							<%= squestion.question.content %>
							<% end %>
							</li>
						</ul>
						
					<% end %>
					
					<% standard.cquestions.where(:select_id => @select).each do |cquestion| %>
					<ul type="disc">
						<li>
					<font color="red"><%= cquestion.content %></font>
						</li>
					</ul>
					<% end %>
			    </td>

				<td>
					<% standard.select_skills.where(:select_id => @select).each do |sskill| %>
					<ul type="disc">
						<li>
						<% if current_user?(@select.user) %>
							<%= best_in_place sskill.skill, :content, :nil => "Click here to add content" %>
							<% else %>
							<%= sskill.skill.content %>
							<% end %>
						</li>
					</ul>
					<% end %>
					
					<% standard.cskills.where(:select_id => @select).each do |cskill| %>
					<ul type="disc">
						<li>
					<font color="red"><%= cskill.content %></font>
						</li>
					</ul>
						<% end %>
			    </td>
			</tr>

			<tr>
					<td width="50%">
					<h5>Vocabulary</h5>
				</td>
					<td width="50%">
					<h5>Strategies</h5>
				</td>
			</tr>	
		
			<tr>
				<td>
					<% standard.select_vocabs.where(:select_id => @select).each do |svocab| %>
					<ul type="disc">
						<li>
						<% if current_user?(@select.user) %>
							<%= best_in_place svocab.vocab, :content_english, :nil => "Click here to add content" %>
							<% else %>
							<%= svocab.vocab.content_english %>
							<% end %>
						</li>
					</ul>
					<% end %>
					
					<% standard.cvocabs.where(:select_id => @select).each do |cvocab| %>
					<ul type="disc">
						<li>
					<font color="red"><%= best_in_place cvocab, :content %></font>
						</li>
					</ul>
					<% end %>
			    </td>
				
				<td>
					<% standard.select_strategies.where(:select_id => @select).each do |sstrategy| %>
					<ul type="disc">
						<li>
						<% if current_user?(@select.user) %>
							<%= best_in_place sstrategy.strategy, :content, :nil => "Click here to add content" %>
							<% else %>
							<%= sstrategy.strategy.content %>
							<% end %>
						</li>
					</ul>
					<% end %>
					
					<% standard.cstrategies.where(:select_id => @select).each do |cstrategy| %>
					<ul type="disc">
						<li>
					<font color="red"><%= best_in_place cstrategy, :content %></font>
						</li>
					</ul>
					<% end %>
			    </td>
			</tr>
			
			<tr>
				<td colspan="2"><h4>Resources</h4></td></tr><tr>



				<td colspan="2">

					<% standard.select_links.where(:select_id => @select).each do |slink| %>
					<ul type="disc">
						<li>
						<% if current_user?(@select.user) %>
							<%= best_in_place slink.link, :comment, :type => :textarea, :nil => "Click here to add content" %> <br /><%= truncate(Rinku.auto_link(slink.link.link), :length=>300).html_safe %>
							<% else %>
							<%= slink.link.comment %> <br /><%= truncate(Rinku.auto_link(slink.link.link), :length=>300).html_safe %>
							<% end %>
						</li>
					</ul>
									<% end %>
					
					<% standard.clinks.where(:select_id => @select).each do |clink| %>
					<ul type="disc">
						<li>
					<font color="red"><%= clink.comment %> <br /><%= truncate(Rinku.auto_link(clink.link), :length=>300).html_safe %></font>
						</li>
					</ul>

					<% end %>

				</td>
			</tr>

		</tbody>
	<% end %>
</table>
<br />
<div id="pdf_link">
		  <div class="accordion" id="accordion2">

		    <div class="accordion-group">
		      <div class="accordion-heading">
		        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
		          Lesson Plan - click to expand
		        </a>
		      </div>
		      <div id="collapseTwo" class="accordion-body collapse">
		        <div class="accordion-inner">

					<%= best_in_place @select, :notes, :type => :textarea, :display_with => :simple_format %>

		        </div>
		      </div>
		    </div>
			<br />

<% if current_user?(@select.user) %>

	<table table-hover>
		<tr>
			<td>
				<%= link_to "Add Question", new_select_cquestion_path(@select),  class: "btn"  %><br />
			</td>

			<td>	
				<%= link_to "Add Skill", new_select_cskill_path(@select), class: "btn" %><br />
			</td>
			
			<td>	
				<%= link_to "Add Vocabulary Word", new_select_cvocab_path(@select), class: "btn" %><br />
			</td>
			
			<td>	
				<%= link_to "Add Strategy", new_select_cstrategy_path(@select), class: "btn" %><br />
			</td>
			<td>	
				<%= link_to "Add Resource", new_select_clink_path(@select), class: "btn" %><br />
			</td>
		</tr>
</table>

<br /><%= link_to "Edit Lesson", edit_select_path(@select), class: "btn" %><%= link_to "Download Lesson", select_path(@select, format: "pdf"), class: "btn" %>

<% else %>
<strong>Created by <%= link_to @select.user.name, @select.user %></strong>
<% end %></div>

<style type="text/css">
a:link {color:#00BFFF;}      /* unvisited link */
a:visited {color:#00BFFF;}  /* visited link */
a:hover {background-color:#FFFFFF;}  /* mouse over link */
a:active {color:#00BFFF;}
</style>


