<body class="cbp-spmenu-push">
    <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
      <%= render 'sidebar' %>
    </nav>
<div class="row">
	<div class="col-md-1">
  <div class="animated fadeInLeftBig">
  <button id="showLeftPush" class="bar">
  <div id="arrow"><span class="glyphicon glyphicon-forward"></span></div>
  </button>
  </div>
  </div>

	<div class="col-md-10">


	<div class="animated fadeInDown">
<div class="panel panel-warning" id="notes">Instructional Norms</div>
</div>

<div class="progress animated fadeInLeft" id="lesson-setup">
  <div class="progress-bar" style="width: 25%;"></div>
  <div class="progress-bar progress-bar-warning" id="lesson-setup" style="width: 25%;"></div>
  <div class="progress-bar progress-bar-info" id="edit" style="width: 25%;"></div>
  <div class="progress-bar progress-bar" style="width: 25%;"></div>
</div>
<div id="standard-attributes" class="animated fadeInUp">
<div class="panel-group" id="accordion">
 <%= simple_form_for @select do |f| %>
 <% @select.headers.each.with_index do |header, index| %>
  <%= f.fields_for :headers, header do |builder| %>
  
  <%= render 'header_fields', f: builder, header: header, index: index %>
 <% end %>
 <% end %><br/>
 <div align="right">
 <%= f.submit "Save and Continue", class: "btn btn-warning", id: "notes" %></div>
  <% end %>
</div>

</div>
</div>
</div>
</body>

<script>
      var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),

        showLeftPush = document.getElementById( 'showLeftPush' ),

        body = document.body;

      
      showLeftPush.onclick = function() {
        classie.toggle( this, 'active' );
        classie.toggle( body, 'cbp-spmenu-push-toright' );
        classie.toggle( menuLeft, 'cbp-spmenu-open' );
        disableOther( 'showLeftPush' );

      };


    </script>