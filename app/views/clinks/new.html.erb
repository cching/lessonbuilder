<h1>Add Resource</h1>

<%= form_for([@select,@clink]) do |f| %>

<div class="field">
  <%= f.label :standard_id, "Standard" %>
  <%= f.collection_select :standard_id, @select.standards.all, :id, :id %>
</div>

<div class="field">
	<%= f.label :comment %>
	<%= f.text_area :comment, :size => "90x10" %> 
</div><br />

<div class="field">
	<%= f.label :link, "Resource" %>
	<%= f.text_area :link, :size => "90x10" %> 
</div><br />



  <button type="submit" class="btn">Submit</button>
<% end %>
