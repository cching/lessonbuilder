                    <% Cvocab.where(:select_id => @select).each do |cvocab| %>
                        <ul type="disc">
                             <li>
                                <% if current_user?(@select.user) %>
                                    <font size="3" color="red"><%= best_in_place cvocab, :content, :nil => "Click here to add content", :html_attrs => { :style => 'width:100%;' } %></font>
                                <% else %>
                                    <font size="3" color="red"><%= cvocab.content %></font>
                                <% end %>
                            </li>
                        </ul>
                    <% end %>