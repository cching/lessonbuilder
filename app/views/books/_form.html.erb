<%= simple_form_for @book, :html => { :multipart => true } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :title, input_html: {style: 'width:100%;'} %><br />
    <%= f.input :author, input_html: {style: 'width:100%;'} %><br />

    <%= f.input :publisher, input_html: {style: 'height:100px; width:100%'} %><br />
          <%= f.input :isbn, label: "ISBN number", input_html: {style: 'width:100%;'} %><br />
        <%= f.input :example, label: "Example Text", input_html: {style: 'height:100px; width:100%'} %><br />
    <%= f.input :assess_questions, label: "Assessment Questions", input_html: {style: 'height:100px; width:100%'} %><br />
    <%= f.input :availability, input_html: {style: 'height:100px; width:100%'} %><br />
    <%= f.input :comments, input_html: {style: 'height:100px; width:100%'} %><br />
    <%= f.association :textcategory, label_method: :category, :include_blank => false, label: "Category" %><br />
    <div class="row">
  <div class="col-md-6"><%= f.association :grades, as: :check_boxes, label_method: :number %><br /></div>
  <div class="col-md-6"><%= f.association :sources, as: :check_boxes, label_method: :name %><br /></div>

</div>
    
        <%= f.input :image, label: "Image" %>
        <%= f.input :pdf, label: 'Select for PDF Input', :as => :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
