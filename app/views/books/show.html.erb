<div id="modal-edit-fields">

<p id="notice"><%= notice %></p>
<center>
<% unless @book.pdf?  %>
    <%= image_tag @book.image.url %>

    <% else %>
    <b>PDF Link: <%= link_to 'View PDF', @book.image.url %></b>
    
    <% end %>

</center>
<p>
  <b>Title:</b>
  <%= @book.title %>
</p>
<p>
  <b>Author:</b>
  <%= @book.author %>
</p>


  <b>Publisher:</b>
<%= simple_format(@book.publisher).html_safe %>


<p>
  <b>ISBN Number:</b>
  <%= @book.isbn %>
</p>

<p>
  <b>Category:</b>
  <%= @book.textcategory.category %>
</p>



<html id=style="white-space: pre-wrap;">

  <b>Example text:</b>
  <div style="font-size: 25pt;"><%= simple_format(@book.example) %>
</div></html>

<p>
  <b>Performance task:</b>
  <%= simple_format @book.assess_questions %>
</p>

<p>
  <b>Availability:</b>
  <%= simple_format @book.availability %>
</p>

</div><br /><div id="pdflink">
<%= link_to "Edit", edit_book_path(@book), class: "btn btn-link" %>
<%= link_to "Save as PDF", book_path(@book, format: "pdf"), class: "btn btn-link" %></div>

<style type="text/css">

@media print {
        #pdflink {
                display: none;
        }
        </style>
