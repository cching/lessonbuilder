<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br />

      <%= f.label :district, "District" %>
      <%= f.collection_select :district_id, District.all, :id, :name, class: "form-control", prompt: "Select a category" %>

     <br /><p> <%= f.submit "Create my account", class: "btn" %></p>
    <% end %>
  </div>
</div>