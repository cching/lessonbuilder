<div id="standard">
<div id="standard-options">
<% if current_user.admin? %>
<div align="right"><%= link_to "Edit", edit_book_path(@book), class: "btn btn-default", remote: :true %></div>
<% end %>
</div>


<div id="modal-edit-fields"><p id="notice"><%= notice %></p>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />

<h3><i><%= @book.title %></i> <br/><small>By <%= @book.author %></small></h3>
<hr>
<% if @book.pdf?  %>
<p>
<b>PDF Link: <%= link_to 'View PDF', @book.image.url %></b>
</p>
<% end %>

<p>  <b>Publisher:</b>
<%= simple_format(@book.publisher).html_safe %>
</p>

<p>
  <b>ISBN Number:</b>
  <%= @book.isbn %>
</p>

<p>
  <b>Grade(s):</b>
<% @book.grades.each do |grade| %>

  <%= grade.number %>

  <% end %>
</p>

<p>
  <b>Source:</b>
<% @book.sources.each do |source| %>

  <%= source.name %>

  <% end %>
</p>

<p>
  <b>Category:</b>
  <%= @book.textcategory.category %>
</p>


<html id=style="white-space: pre-wrap;">

  <b>Example text:</b>
  <div style="font-size: 13pt;"><%= simple_format(@book.example) %>
</div></html>

<p>
  <b>Performance task:</b>
  <%= simple_format @book.assess_questions %>
</p>

<p>
  <b>Availability:</b>
  <%= simple_format @book.availability %>
</p>
<p>
  <b>Comments:</b>
  <%= simple_format(@book.comments) %>
</p>



</div><br />

<%= link_to "Save as PDF", book_path(@book, format: "pdf"), class: "btn btn-link" %></div>