<%= simple_form_for(@select_link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :select_id %>
    <%= f.input :link_id %>
    <%= f.input :comment %>
    <%= f.input :link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
