<% Book.where(:textcategory_id => [5, 6, 8, 9, 10]).includes(:grades).where(:grades => {:id => grade.id}).order("grade_id DESC").each do |book| %>
<div class="row">
    <div class="span1"><%= f.radio_button :book_id, book.id %>
    </div>
    <div class="span11"><b>Title: </b><i><%= book.title %></i></div></div>
    <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><b>Author: </b><%= book.author %></div></div>
    <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><b>Publisher: </b><%= book.publisher %></div></div>
        <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><b>ISBN: </b><%= book.isbn %></div></div>
        <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><b>Availability: </b><%= book.availability %></div></div>
    <% unless book.example.blank? %>
        <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><%= link_to "View Example Text", book,:action => 'show',:id => @book , :remote =>:true %></div></div>
    <% else %>
            <div class="row">
    <div class="span1">
    </div>
    <div class="span11">No Example Text Available</div></div>
    <% end %>
        <% unless book.assess_questions.blank? %>
        <div class="row">
    <div class="span1">
    </div>
    <div class="span11"><%= link_to "View Performance Task", book,:action => 'show',:id => @book , :remote =>:true %></div></div>
    <% else %>
            <div class="row">
    <div class="span1">
    </div>
    <div class="span11">No Performance Task Available</div></div>
    <% end %><br />
<% end %>
<% end %>

<% end %>
<div align="center"> <button type="submit" class="btn" data-loading-text="Saving..">Save and Continue</button></div><br />
<% end %>




 
