<body><div class="container">


<%= form_for @select, :url => wizard_path(step, select_id: @select.id), :method => :put do |f| %>
<div class="page-header">
  <h1>Select a Text <small>

  <% @select.sources.each do |source| %>
    <%= source.name %> |
    <% end %></small></h1>
</div>
<% if @select.subject_id==1%>

    <br />

<div class="well well-sm">
<b><font size="6">Legend</font> </b><br/><br/>
<table>
<tr>
                   <td>
<span class="label label-danger">
                   <span class="glyphicon glyphicon-book"></span> <font size="2">No example text available</font>
                   </span>
                   </td>
                   <td>
                   <span class="label label-info">
                   <span class="glyphicon glyphicon-pencil"></span> <font size="2">Performance task available</font></span>
                   </td>
                   </tr>
                   </table>




                   </div>

<br/>

<div class="row">
   
  
        <div class="col-md-4">
            <div class="div-table-content">

                
                        <% @select.grades.each do |grade| %>
<% @select.sources.each do |source| %>
                <% (Book.where(:textcategory_id => [1, 2, 3, 4, 7]).includes(:grades).where(:grades => {:id => grade.id}).order("title ASC") & Book.where(:textcategory_id => [1, 2, 3, 4, 7]).includes(:sources).where(:sources => {:id => source.id}).order("title ASC")).each do |book| %>

                <div class="list-group">
                <table>
                <tr>
                <td>
                &nbsp;
                </td>
                <td>
                <%= f.radio_button :book_id, book.id %>
                </td>
                <td>
                &nbsp;
                </td>
                <td>
                    <font size="4"><%= link_to book.title, show2_books_path(:id => book.id), class: "list-group-item", remote: :true %></font></td>
                    <td>
                    &nbsp; &nbsp;
                    </td>
                   <td>
                   <% if book.example == nil || book.example == "" %>
                   <span class="label label-danger">
                   <span class="glyphicon glyphicon-book"></span>
                   </span>
                   <% end %>
                   </td>
                   <td>
                   <% unless book.assess_questions == nil || book.assess_questions == "" %>
                   <span class="label label-info">
                   <span class="glyphicon glyphicon-pencil"></span>
                   </span>
                   <% end %>



                    </td>
                    </tr></table>
                </div>

<% end %>
                <% end %><% end %>
             </div>
        </div>

  
        <div class="col-md-8">
                <div id="book">
                  
                            Click on a book to see a preview
                  </div>
        </div>
</div>








<% else %>
<br />



<div class="well well-sm">
<b><font size="6">Legend</font> </b><br/><br/>
<table>
<tr>
                   <td>
<span class="label label-danger">
                   <span class="glyphicon glyphicon-book"></span> <font size="2">No example text available</font>
                   </span>
                   </td>
                   <td>
                   <span class="label label-info">
                   <span class="glyphicon glyphicon-pencil"></span> <font size="2">Performance task available</font></span>
                   </td>
                   </tr>
                   </table>




                   </div>



<div class="row">
   
  
        <div class="col-md-4">
            <div class="div-table-content">

                
<% @select.grades.each do |grade| %>
<% @select.sources.each do |source| %>
<% (Book.where(:textcategory_id => [5, 6, 8, 9, 10]).includes(:grades).where(:grades => {:id => grade.id}).order("title ASC") & Book.where(:textcategory_id => [5, 6, 8, 9, 10]).includes(:sources).where(:sources => {:id => source.id}).order("title ASC")).each do |book| %>

                               <div class="list-group">
                <table>
                <tr>
                <td>
                &nbsp;
                </td>
                <td>
                <%= f.radio_button :book_id, book.id %>
                </td>
                <td>
                &nbsp;
                </td>
                <td>
                    <font size="4"><%= link_to book.title, books_show2_path(:id => book.id), class: "list-group-item", remote: :true %></font></td>
                    <td>
                    &nbsp; &nbsp;
                    </td>
                   <td>
                   <% unless book.example == nil || book.example == "" %>
                   <span class="label label-danger">
                   <span class="glyphicon glyphicon-book"></span>
                   </span>
                   <% end %>
                   </td>
                   <td>
                   <% unless book.assess_questions == nil || book.assess_questions == "" %>
                   <span class="label label-info">
                   <span class="glyphicon glyphicon-pencil"></span>
                   </span>
                   <% end %>



                    </td>
                    </tr></table>
                </div>

<% end %>
                <% end %><% end %>
             </div>
        </div>

  
        <div class="col-md-8">
                <div id="book">
                  
                            Click on a book to see a preview
                  </div>
        </div>
</div>

<% end %>
<br />
<br />
 <button type="submit" class="btn btn-info" data-loading-text="Saving..">Save and Continue</button>
<% end %>


</body>
</div>




<script>
	$('button[data-loading-text]').click(function () {
    $(this).button('loading');
});
</script>

