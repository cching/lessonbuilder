<% if current_user.admin? %>

<h1>Add Assessment Question</h1>






<%= simple_form_for(@aquestion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.association :standard, label_method: :id, include_blank: false %>
  </div>

    <div class="form-inputs">
  <%= f.input :content %>
  </div>

<%= f.input :level, collection: 1..10, include_blank: false %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>


<% end %>

<%= link_to 'Back', questions_path %>

<% end %>

