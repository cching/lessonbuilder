<h1>Curriculum Standards</h1>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :grade_id %><br />
    <%= f.collection_select :grade_id, Grade.order(:id), :id, :number, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :subject_id %><br />
    <%= f.collection_select :subject_id, Subject.order(:name), :id, :name, include_blank: true %>
  </div>


   <div class="actions"><%= f.submit "Search" %></div>
<% end %>