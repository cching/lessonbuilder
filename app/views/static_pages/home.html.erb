<div class="animated fadeInDown">
<span class="header">
<%= image_tag("final_homepage_header.jpg",  class: "img-responsive header") %>
</span>
</div>
<% if current_user %>
<div class="animated fadeInUp">
<%= image_tag("final_homepage.jpg", class: "img-responsive info", align: "center") %>
</div>
<% else %>
<div id="right">
<div class="row">
<div class="col-sm-8">
<div class="animated fadeInLeft">

<%= image_tag("final_homepage.jpg",  class: "img-responsive") %>

</div>
</div>
<div class="col-sm-4 animated fadeInRight">


<div class="login">
Login
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  	<div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">@
      </div>
      <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "email", label: false %>
	</div>
	<br/>
  	<div class="form-group">
    <div class="input-group">
      <%= f.input :password, required: false, class: "form-control", placeholder: "password", label: false %>
      <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span>
      </div>
	</div>

  </div>
  <br />
<%= f.submit "Sign In", :class => "btn btn-primary", :id => "builder" %>
</div>

<% end %>
</div>



<div class="signup">
<br/ >
Create an Account
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  	<div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">@
      </div>
      <%= f.input :email, required: true, autofocus: true, class: "form-control", placeholder: "email", label: false %>
	</div>
	</div>
	
	<div class="form-group">
    <div class="input-group">
      <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span>
      </div>
      <%= f.input :name, required: true, autofocus: true, class: "form-control", placeholder: "name", label: false %>
	</div>
	</div>


  	<div class="form-group">
    <div class="input-group">
      <%= f.input :password, required: true, class: "form-control", placeholder: "password", label: false %>
      <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span>
      </div>
	</div>
	</div>
	

	<div class="form-group">
    <div class="input-group">
      
      <%= f.input :password_confirmation, required: true, autofocus: true, class: "form-control", placeholder: "password confirmation", label: false %>
      <div class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span>
      </div>
	</div>
	</div>
  District: 
	 <%= f.association :district, required: true, autofocus: true, class: "dropdown", label: false %><br/>


    <%= f.button :submit, "Sign up", :class => "btn btn-primary", :id => "builder" %>
<% end %><br/>
</div>

</div>
</div>
</div>
<% end %>
<script type='text/javascript'>

// Shows progress bar when loading a page 
 $('body').show();
  NProgress.start();
  setTimeout(function() { NProgress.done(); $('.fade').removeClass('out'); }, 1000);


// Shows progress bar  when submitting form via ajax
$(document).ajaxStart(function() {
               NProgress.start();
              });
$(document).ajaxStop(function() {
               NProgress.done();
             });
</script> 

