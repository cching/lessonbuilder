<% if signed_in? %>
<div id="pdflink"><%= image_tag("Headers.jpg") %></div>
<% else %>
<%= image_tag("Headers.jpg") %>
<% end %>
<body>

<nav class="navbar navbar-default" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
       <li><%= link_to "Home", root_path %></li>
       <% if signed_in? %>

         <li><%= link_to "Lesson Builder", new_select_path %></li>
         <li><%= link_to "Browse Lessons", selects_path %></li>
     <% end %>
            <li><%= link_to "Help", help_path %></li>
      <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             Account <b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li><%= link_to "Profile", current_user %></li>
             <li class="divider"></li>
             <li>
               <%= link_to "Sign out", signout_path, method: "delete" %>
             </li>        </ul>
      </li>
    </ul>

  </div><!-- /.navbar-collapse -->
</nav>


</body>


<style type="text/css">   
.navbar-default {
  background-image: -moz-linear-gradient(top, #47cde5, #47cde5);
  background-image: -ms-linear-gradient(top, #47cde5, #47cde5);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#47cde5), to(#47cde5));
  background-image: -webkit-linear-gradient(top, #47cde5, #47cde5);
  background-image: -o-linear-gradient(top, #47cde5, #47cde5);
  background-image: linear-gradient(top, #47cde5, #47cde5);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#'47cde5, endColorstr='#'47cde5, GradientType=0);
}

body { padding-top: 0px; }
@media screen and (max-width: 768px) {
    body { padding-top: 0px; }
}


.navbar .nav > li > a {
  padding: 10px 10px 11px;
  font-size: 14px;
  color: #ffffff;
}

.navbar .nav > .active > a,
.navbar .nav > .active > a:hover,
.navbar .nav > .active > a:focus {
  color: #ffffff;
}
</style>