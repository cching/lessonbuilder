<div id="modal-edit-fields">

<p id="notice"><%= notice %></p>
<div id="pdflink"><%= render 'info' %></div>
<p>
  <b>Title:</b>
  <%= @book.title %>
</p>
<p>
  <b>Author:</b>
  <%= @book.author %>
</p>


  <b>Publisher:</b>
<%= simple_format(@book.publisher).html_safe %>


<p>
  <b>ISBN Number:</b>
  <%= @book.isbn %>
</p>

<p>
  <b>Category:</b>
  <%= @book.textcategory.category %>
</p>


<p>
  <b>Source:</b>
<% @book.sources.each do |source| %>

  <%= source.name %>

  <% end %>
</p>


<p>
  <b>Comment:</b>
  <%= simple_format(@book.comments) %>
</p>



<html id=style="white-space: pre-wrap;">

  <b>Example text:</b>
  <div style="font-size: 13pt;"><%= simple_format(@book.example) %>
</div></html>

<p>
  <b>Performance task:</b>
  <%= simple_format @book.assess_questions %>
</p>

<p>
  <b>Availability:</b>
  <%= simple_format @book.availability %>
</p>

</div><br /><div id="pdflink">
<%= link_to "Edit", edit_book_path(@book), class: "btn btn-link" %>
<%= link_to "Save as PDF", book_path(@book, format: "pdf"), class: "btn btn-link" %></div>

<style type="text/css">

@media print {
        #pdflink {
                display: none;
        }
        </style>
