<% if current_user.admin? %>

<h1>Add Vocabulary</h1>

<%= form_for @vocab do |f| %>

<div class="field">
  <%= f.label :standard_id, "Standard" %>
  <%= f.collection_select :standard_id, Standard.all, :id, :id %>
</div>

<div class="field">
	<%= f.label :content_english %>
	<%= f.text_area :content_english, :size => "90x10" %></div><br />
	
	<div class="field">
		<%= f.label :content_spanish %>
		<%= f.text_area :content_spanish, :size => "90x10" %></div><br />

	<%= f.submit "Add Vocabulary Word", class: "btn" %>

<% end %>
<%= link_to 'Back', strategies_path %>
<% end %>
