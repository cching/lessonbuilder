<%= simple_form_for([@select,@cquestion], :remote => true) do |f| %>
<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add Question Stem</h4>
      </div>
      <div class="modal-body">

<div class="dropdown">
  <%= f.association :standard, collection: @select.standards.all, input_html: {:data => {:toggle => "dropdown"}}, class: "btn btn-primary dropdown-toggle", label_method: :id %></div>



	<%= f.input :content, as: :text, label_method: "Content", input_html: {style: 'width:100%; height:60px'} %>

      </div>
      <div class="form-actions">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>   
      </div>   

    </div>
  </div><% end %>