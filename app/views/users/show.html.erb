<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
      <h1>
		  <% if current_user.admin? && current_user?(@user) %>
		  Administrator <%= @user.name %>
				<% else %>
      		  		<%= @user.name %>
				<% end %>
      </h1>
    </section>
	
	<% if current_user?(@user) %>

	<table class="table-hover">
		<% @select.each do |select| %>

		<tr>
			<td>
				<% unless select.name.blank? %>
					<%= link_to select.name, select, class: "btn btn-link" %>
				<% else %>
					No lesson name specified!
				<% end %>
			</td>
			<td>
				<%= link_to "Edit", edit_select_path(select), class: "btn btn-mini" %>
			</td>
			<td>
				<%= link_to 'Delete', select, confirm: 'Are you sure you want to delete this lesson?', method: :delete, class: "btn btn-danger btn-mini" %>
			</td>
		</tr>
		<% end %>
		
	</table><br />
		
		
<table>	<tr><td>
   <%= link_to "Build new lesson", new_select_path, class: "btn" %></td></tr></table>
  </aside>
</div>

<% else%>



<table class="table-hover">
	<% @select.each do |select| %>
	<tr>
<td><%= link_to select.name, select, class: "btn btn-link" %></td>
</tr><% end %>
	
	</table><br />
<% end %><br />

<% if current_user.admin? && current_user?(@user) %>
<strong>Administrator Settings</strong><br />

<table>
	<tr>
		<td><%= link_to "Books", books_path, class: "btn" %></td>
		<td><%= link_to "Users", users_path, class: "btn" %></td>
		<td><%= link_to "Questions", questions_path, class: "btn" %></td>
		<td><%= link_to "Strategies", strategies_path, class: "btn" %></td>
		<td><%= link_to "Vocabulary", vocabs_path, class: "btn" %></td>
		<td><%= link_to "Resources", links_path, class: "btn" %></td>

	</tr>
</table>
<% end %>


