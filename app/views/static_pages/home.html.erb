<script type='text/javascript'>

// Shows progress bar when loading a page 
 $('body').show();
  NProgress.start();
  setTimeout(function() { NProgress.done(); $('.fade').removeClass('out'); }, 1000);


// Shows progress bar  when submitting form via ajax
$(document).ajaxStart(function() {
               NProgress.start();
              });
$(document).ajaxStop(function() {
               NProgress.done();
             });
</script> 

