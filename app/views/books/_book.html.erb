<div id="standard">

<h3><i><%= @book.title %></i> <br/><small>By <%= @book.author %></small></h3>
<hr>
<% if @book.pdf?  %>
<p>
<b>PDF Link: <%= link_to 'View PDF', @book.image.url %></b>
</p>
<% end %>
<div class="row">
<div class="col-md-6">

<p>  <b>Publisher:</b>
<%= simple_format(@book.publisher).html_safe %>
</p>
</div>
<div class="col-md-6">

<p>
  <b>Category:</b>
  <%= @book.textcategory.category %>
</p>
</div></div>

<div class="row">
<div class="col-md-6">
<p>
  <b>Grade(s):</b>
<% @book.grades.each do |grade| %>

  <%= grade.number %>

  <% end %>
</p>
</div>
<div class="col-md-6">
<p>
  <b>Source:</b>
<% @book.sources.each do |source| %>

  <%= source.name %>

  <% end %>
</p>
</div></div>

<html id=style="white-space: pre-wrap;">
<p>
  <b>Example text:</b>
  <div style="font-size: 13pt;"><%= simple_format(@book.example) %>
</p></html>

<% unless @book.assess_questions.blank? %>
<p>
  <b>Performance task:</b>
  <%= simple_format @book.assess_questions %>
</p>
<% end %>

<% unless @book.availability.blank? %>
<p>
  <b>Availability:</b>
  <%= simple_format @book.availability %>
</p>
<% end %>

<% unless @book.comments.blank? %>
<p>
  <b>Comments:</b>
  <%= simple_format(@book.comments) %>
</p>
<% end %>

<%= link_to "Save as PDF", book_path(@book, format: "pdf"), class: "btn btn-primary" %></div>
<br />
<% if current_user.try(:admin) %>
  <%= link_to "Edit", edit_book_path(@book), class: "btn btn-default", remote: :true %>
  <% end %></div>