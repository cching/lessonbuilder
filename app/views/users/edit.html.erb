<% if current_user?(@user) %>
<h1>Edit User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :district, "District" %>
      <%= f.collection_select :district, District.all, :id, :name, class: "form-control", prompt: "Select a category" %><br />

     <br /><p> <%= f.submit "Create my account", class: "btn" %></p>
    <% end %>
  </div>
</div>
<% end %>