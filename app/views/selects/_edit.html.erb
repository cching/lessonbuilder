<% if params[:status] == "question" %>
  <%= simple_form_for(@select, :remote => true, :url => select_path) do |f| %>
<div class="modal-dialog" id="lesson_resources">
    <div class="modal-content" id="lesson_resources">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Question Stems</h4>
      </div>
      <div class="modal-body">

<div class="dropdown">

  <% @select.standards.each do |standard| %>
  <%= standard.id %>
  <%= f.fields_for :xquestions, Xquestion.where(:select_id => @select.id).where(:standard_id => standard.id) do |builder| %>
  <%= render 'xquestions', f: builder %>
<% end %>
<% end %>

      </div>
      <div class="form-actions">
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>   
      </div>   

    </div>
  </div>
<% end %>
<% end %>