<%= simple_form_for(@select, :html => { :class => 'form-horizontal' }, url: wizard_path) do |f| %>
<ul class="nav nav-pills nav-justified" id="succ_standard">

<% @standards.each do |standard| %>
    <li class="border animated fadeInRight"><h4><%= standard.id %></h4><br/><%= link_to standard.content, '#', remote: :true %>  </li>
    <% end %>

</ul>
<br/>

<div id="standard-attributes" class="animated zoomIn">



<div class="row">
  <div class="col-md-6">
  	<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Question Stems<div align="right"><%= link_to "Edit", edit_select_xquestion_path(@select), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', 'class' => 'btn btn-primary'}  %></div></h3>
  </div>
  <div class="panel-body table-content">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <div id="xquestion">
  <%= render 'xquestions', :standard => standard, :f => f %>
  </div> 
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
</div>

  <div class="col-md-6">
    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Vocabulary</h3>
  </div>
  <div class="panel-body table-content">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <div id="xvocabs">
  <%= render 'xvocabs', :standard => standard, :f => f %>
  </div> 
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
</div>


</div>

<div class="row">
    <div class="col-md-6">
    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Strategies</h3>
  </div>
  <div class="panel-body table-content">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <div id="xstrategies">
  <%= render 'xstrategies', :standard => standard, :f => f %>
  </div> 
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
</div>

  <div class="col-md-6">
    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Skills</h3>
  </div>
  <div class="panel-body table-content">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <div id="xskills">
  <%= render 'xskills', :standard => standard, :f => f %>
  </div> 
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
</div>



  </div>


  
    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Resources</h3>
  </div>
  <div class="panel-body table-content-links">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <div id="xlinks">
  <%= render 'xlinks', :standard => standard, :f => f %>
  </div> 
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>




    <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Assessment Questions</h3>
  </div>
  <div class="panel-body table-content-links">
  <% @select.standards.each do |standard| %>
  <div class="row">
  <div class="col-md-3"><%= standard.id %></div><div class="col-md-9"></div>
  </div>

  <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
  <% if Aquestion.where(:standard_id => standard.id).empty? %>
  No assessment questions exist for this standard. Continue to the next page to add them.
  <% else %>

  
  <%= f.association :aquestions, collection: Aquestion.where(:standard_id => standard.id), as: :check_boxes, :label_method => lambda { |aquestion| "#{aquestion.content}"}, input_html: {:data => {:toggle => "checkbox"}}, label: false %>
  
  <% end %>
  </div>
  
  </div>
<% end %>
  
  </div>
  </div>
 
<div class="row">
<div class="col-md-2">Teaching on:
 <%= f.text_field :date, id: "selects_date", type: "text", class: "form-control" %></div>

 <div class="col-md-8"></div>
 <div class="col-md-2">
<%= f.input :private, inline_label: 'Keep my lesson private', input_html: {:data => {:toggle => "checkbox"}}, label: false %></div></div> <br/>
<div class="row">
<div class="col-md-6">	<%= link_to 'Delete lesson', @select, confirm: 'Are you sure you want to delete this lesson?', method: :delete, class: "btn btn-danger btn-mini" %></div>
<div class="col-md-6" align="right">
 <button type="submit" class="btn btn-info" data-loading-text="Saving..">Submit</button>
</div></div>

</div>
<% end %>
