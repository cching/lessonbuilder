                    <% Cquestion.where(:select_id => @select).each do |cquestion| %>
                        <ul type="disc">
                            <li>
                                <% if current_user?(@select.user) %>
                                    <font size="3" color="red"><%= cquestion.standard_id %>: <%= best_in_place cquestion, :content, :nil => "Click here to add content", :html_attrs => { :style => 'width:100%;' }, :type => :textarea %></font>
                                <% else %>
                                    <font size="3"><%= cquestion.standard_id %>: <%= cquestion.content %></font>
                                <% end %>
                            </li>
                        </ul>
                    <% end %>