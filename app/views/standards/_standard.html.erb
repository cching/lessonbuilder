<div id="standard">
<div id="standard-options">
<%= link_to '<i class="glyphicon glyphicon-chevron-left"></i> '.html_safe, standards_path, remote: :true, class: "btn btn-info btn-sm" %>
<% if current_user.admin? %>
<div align="right"><%= link_to "Edit", edit_standard_path(@standard), class: "btn btn-default", remote: :true %></div>
<% end %></div>

<br/>



<ul class="nav nav-pills nav-justified" id="succ_standard">

<% if @successive_prev.present? %>
    <li class="border"><h4><%= @successive_prev.id %></h4><br/><%= link_to @successive_prev.content, standard_path(@successive_prev), remote: :true %>  </li>
    <% end %>
      <li class="active">
      <h4><%= @standard.id %></h4>
      <a href="#"><%= @standard.content %></a>
  </li>
  <% if @successive_next.present? %>

    <li class="border">
    <h4><%= @successive_next.id %></h4><br/><%= link_to @successive_next.content, standard_path(@successive_next), remote: :true %>
  </li>
  <% end %>

</ul>
<br/><br/>

<div id="standard-attributes">

<% if @standard.anchor_standards.any? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Anchor Standards</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @anchors.each do |anchor| %>
      <li><%= anchor.content %></li>
      <% end %></ul>
  </div></div>
  <% end %>

<% if @standard.i_cans.any? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">"I can..." Statements</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @icans.each do |ican| %>
      <li><%= ican.content %></li>
      <% end %></ul>
  </div></div>
  <% end %>

<div class="row">
  <div class="col-md-6">
  	<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Question Stems</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @questions.each do |question| %>
    	<li><%= question.content %></li>
    	<% end %></ul>
  </div>
</div>
  	
  </div>
  <div class="col-md-6">
  		<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Skills</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @skills.each do |skill| %>
    	<li><%= skill.content %></li>
    	<% end %></ul>
  </div>
</div>


  </div>
</div>

<div class="row">
  <div class="col-md-6">
  	<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Strategies</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @strategies.each do |strategy| %>
    	<li><%= strategy.content %></li>
    	<% end %></ul>
  </div>
</div>
  	
  </div>
  <div class="col-md-6">
  		<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Vocabulary</h3>
  </div>
  <div class="panel-body">
<ul>
    <% @vocabs.each do |vocab| %>
    	<li><%= vocab.content_english %></li>
    	<% end %></ul>  </div>
</div>


  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Resources</h3>
  </div>
  <div class="panel-body">
    <ul>
    <% @links.each do |link| %>
    	<li><%= link.comment %><br/> <%= link.link %></li>
    	<% end %></ul>
  </div>
</div>

<div class="panel panel-default" >
  <div class="panel-heading">
    <h3 class="panel-title">Related Standards</h3>
  </div>
  <div class="panel-body">
    <ul class="nav nav-pills nav-justified">
    <% @successive.each do |successive| %>
    <li class=<%= "active" if successive.id == @standard.id %>><%= link_to successive.id, standard_path(successive), remote: true %>
  </li>
  <% end %>


</ul>
  </div></div>
</div>
</div>
