$('#sidebar').addClass('animated bounceOutLeft');

setTimeout(function() {
	$('#sidebar').removeClass('animated bounceOutLeft');
	$('#sidebar').hide();

     if ($('#main').is(':hidden')) {
        $('#main').show();
     } 

	$('#main').addClass('animated bounceInLeft');
	$('#main').html("<%= escape_javascript(render :partial  => "book_list", :locals   => {:grade => @grade, :category => @category}) %>" );



}, 600);

