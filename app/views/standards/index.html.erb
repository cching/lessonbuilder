</div>

<div class="row">
	  <div class="span4"><br /><font color="red">Select the Common Core Standard(s) for this lesson:</font>
	  </div>
	  <div class="span8">
<table class="table table-hover">
	<tr>
		<th> &nbsp; &nbsp; &nbsp; &nbsp;</th>
		<th><%= sort_link @search, :number, "Standard ID" %></th>
		<th><%= sort_link @search, :subsubject, "Subject" %></th>
		<th><%= sort_link @search, :content, "Standard" %></th>

	</tr>

		<%= hidden_field_tag "select[standard_ids][]", nil %>
		<% @standards.where(:subject_id => 1).each do |standard| %>
		<tr>
    		<td><%= check_box_tag "select[standard_ids][]", standard.id, @select.standard_ids.include?(standard.id), id: dom_id(standard) %></td>
			<td><%= standard.id %></td>
			<td><%= standard.subsubject.name %></td>
    		<td><%= standard.content %></td>
		</tr>
		<% end %>
		</table>
		
		<div align="right"><%= will_paginate @standards, :page_links => false %></div>
		<div class="actions", align="left">
			<button type="submit" class="btn" data-loading-text="Saving..">Save and Continue</button>
		</div>
		</div>
	<% end %>
</div>

	
	<% else %>
	<center>Please sign in before continuing.<br /><%= link_to "Sign in", signin_path, class: "btn btn-link" %>
		<% end %>
		
